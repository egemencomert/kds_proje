<!DOCTYPE html>
<html lang="tr">

<head>
    <%- include('partials/head') %>
</head>

<body>

    <%- include('partials/sidebar', { path: '/seferler' }) %>

        <div class="main-content">
            <h2 class="fw-bold mb-4 text-white">Sefer Listesi</h2>

            <div class="card shadow-sm" style="background: #1e293b; border: 1px solid #334155;">
                <div class="card-body p-0">
                    <table class="table table-dark-custom mb-0 table-hover">
                        <thead>
                            <tr>
                                <th>Tarih</th>
                                <th>Tır Plaka</th>
                                <th>Kalkış -> Varış</th>
                                <th>Tonaj</th>
                                <th>Navlun (Gelir)</th>
                                <th>Yakıt (Gider)</th>
                                <th>Net Kar</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% seferler.forEach(sefer=> { %>
                                <tr>
                                    <td>
                                        <%= formatDate(sefer.Tarih) %>
                                    </td>
                                    <td><span class="badge bg-secondary">
                                            <%= sefer.Plaka %>
                                        </span></td>
                                    <td>
                                        <%= sefer.Kalkis %> <span class="text-secondary">-></span>
                                            <%= sefer.Varis %>
                                    </td>
                                    <td>
                                        <%= sefer.Tasinan_Tonaj %> Ton
                                    </td>
                                    <td class="text-primary fw-bold">
                                        <%= formatCurrency(sefer.Navlun_Bedeli) %>
                                    </td>
                                    <td class="text-danger">
                                        <%= formatCurrency(sefer.Yakit_Gideri) %>
                                    </td>
                                    <td class="text-success fw-bold">
                                        <%= formatCurrency(sefer.kar) %>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</body>

</html>